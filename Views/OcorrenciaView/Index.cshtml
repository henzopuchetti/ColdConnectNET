@model List<ColdConnectNET.API.Models.Ocorrencia>

<h2>OcorrÃªncias Registradas</h2>

<table class="table">
    <thead>
        <tr>
            <th>Tipo</th>
            <th>Data</th>
            <th>Abrigo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ocorrencia in Model)
        {
            <tr>
                <td>@ocorrencia.Tipo</td>
                <td>@ocorrencia.Data.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@ocorrencia.Abrigo?.Nome</td>
            </tr>
        }
    </tbody>
</table>
